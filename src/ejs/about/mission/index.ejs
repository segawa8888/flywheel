                            <div class="p-people-value__item-icon p-people-value__item-icon4" data-module="FadeIn">
                                <%- img("icon_value4", "Respect", "value", "svg") %>
                            </div>
                            <p class="p-people-value__item-text font-accent white-space-no" data-delay="0.5" data-module="FadeIn">Respect Open<br> 
                                Communications and Feedback</p>
