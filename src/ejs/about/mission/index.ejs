<body>
  <%- include(`${ROOT}_common/_header.ejs`, {path: meta.path}) %>
  <!-- contents start -->
  <div id="mainContents" class="about sub">
		<div class="webgl-container__wrap">
			<div id="webgl-container"></div>
		</div>
    <section class="pt-160 pb-sp-20 ta-c">
      <div class="ml-sp-37 mr-sp-37">
        <h1 class="u-title02 ta-c">ミッション・バリュー</h1>

        <div class="p-mission__logo ta-c fadeIn--fromBottom" data-module="FadeIn">
            <%- img("logo", "FLYWHEEL", "common", "svg", true) %>
